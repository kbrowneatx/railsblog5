<h1>All Posts</h1>

<% @posts.each do |post| %>
    <div class='postblock'>
		<h3>|<%= link_to post.title, post %>|</h3>
		<p><%= post.content %></p>
		<p><%= link_to 'Edit', edit_post_path(post), { :class => 'bluelink' } %> &emsp; | &emsp;
		  <%= link_to 'Destroy', post, { :class => 'bluelink' }, method: :delete, data: { confirm: 'Are you sure?' } %></p>
	</div>
<% end %>


<hr />
<%= link_to 'New Post', new_post_path, { :class => 'orangelink' } %>